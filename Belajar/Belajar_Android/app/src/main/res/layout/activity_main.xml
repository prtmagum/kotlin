<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:scaleType="fitXY"
                android:src="@drawable/bg2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="60dp"
                    android:src="@drawable/agum" />

                <Space
                    android:layout_width="12dp"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="67dp"
                        android:layout_marginBottom="24dp"
                        android:text="Hai, Agum Pratama!"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="95dp"
                        android:layout_marginBottom="5dp"
                        android:text="Selamat datang di Math-Fun"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </RelativeLayout>

            </LinearLayout>
            <!--            <TextView-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="Hai Agum Pratama"-->
            <!--                android:textStyle="bold"-->
            <!--                android:textColor="@color/white"-->
            <!--                android:textSize="20sp"-->
        </FrameLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="5dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <SearchView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Searchview"
                android:queryHint="Search Here" />
        </RelativeLayout>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
<!--        Widget-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="145dp"
                android:layout_height="120dp">
                <Button
                    android:id="@+id/btn_latihan"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/latihan"
                    android:backgroundTint="@color/navy"
                    android:gravity="bottom"
                    android:paddingBottom="8dp"
                    android:textSize="11sp"
                    android:text="LATIHAN"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                    tools:ignore="MissingConstraints,RtlCompat"
                    tools:layout_editor_absoluteX="28dp" />
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="25dp"
                    android:src="@drawable/logo_latihan"/>
            </FrameLayout>
            <FrameLayout
                android:layout_width="105dp"
                android:layout_height="120dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btn_quiz"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:background="@drawable/latihan"
                        android:backgroundTint="@color/navy"
                        android:gravity="bottom"
                        android:paddingBottom="8dp"
                        android:text="QUIZ"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="28dp" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/logo_quiz" />
                </RelativeLayout>

            </FrameLayout>
            <FrameLayout
                android:layout_width="117dp"
                android:layout_height="120dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btn_math"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/latihan"
                        android:backgroundTint="@color/navy"
                        android:gravity="bottom"
                        android:paddingBottom="8dp"
                        android:text="LATIHAN"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        tools:ignore="MissingConstraints,RtlCompat"
                        tools:layout_editor_absoluteX="28dp" />
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="32dp"
                        android:src="@drawable/logo_math"/>
                </RelativeLayout>

            </FrameLayout>

        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp"/>
<!--        Temukan-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/btn_temukan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="@color/navy"
                    android:textSize="12sp"
                    android:text="Halaman yang mungkin kamu sukai"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </FrameLayout>
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
<!--        VIDEO-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="180dp"
                android:layout_height="120dp">

                <Button
                    android:id="@+id/btn_video1"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/latihan"
                    android:backgroundTint="@color/navy"
                    android:text="Cuplikasn video trik cepat"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                    tools:ignore="MissingConstraints,RtlCompat"
                    tools:layout_editor_absoluteX="28dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btn_video2"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/latihan"
                    android:backgroundTint="@color/navy"
                    android:text="Cuplikasn video trik cepat"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                    tools:ignore="MissingConstraints,RtlCompat"
                    tools:layout_editor_absoluteX="28dp" />

            </FrameLayout>

        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="180dp"
                android:layout_height="120dp">

                <Button
                    android:id="@+id/btn_video3"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/latihan"
                    android:backgroundTint="@color/navy"
                    android:text="Cuplikasn video trik cepat"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                    tools:ignore="MissingConstraints,RtlCompat"
                    tools:layout_editor_absoluteX="28dp" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="200dp"
                android:layout_height="120dp">
                <Button
                    android:id="@+id/btn_video4"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/latihan"
                    android:backgroundTint="@color/navy"
                    android:textSize="11sp"
                    android:text="Cuplikasn video trik cepat"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                    tools:ignore="MissingConstraints,RtlCompat"
                    tools:layout_editor_absoluteX="28dp" />

            </FrameLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>